<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/content_background"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/tv_fake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/contentText1"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

            <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/contentText1"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

        </LinearLayout>


        <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fake"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/vs"
                android:textColor="@color/contentText1"
                android:textSize="16sp" />

        <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fake"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/tv_home_score"
                android:maxWidth="100dp"
                android:maxLines="1"
                android:minLines="1"
                android:textAlignment="textEnd"
                android:textColor="@color/contentText1"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_home_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fake"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/vs"
                android:textColor="@color/contentText1"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_away_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fake"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tv_away_score"
                android:maxWidth="100dp"
                android:maxLines="1"
                android:minLines="1"
                android:textAlignment="textStart"
                android:textColor="@color/contentText1"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_away_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fake"
                android:layout_alignParentEnd="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/vs"
                android:textColor="@color/contentText1"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vs"
                android:layout_centerHorizontal="true">


            <ImageView
                    android:id="@+id/iv_alarm"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_alarm" />

        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>